<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GameXO_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GameXO_MAUI"
    xmlns:pages="clr-namespace:GameXO_MAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="GameXO_MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate pages:GamePage}"
        Route="GamePage" />

    <ShellContent 
        Title="HighScore"
        ContentTemplate="{DataTemplate pages:HighScorePage}"
        Route="HighScorePage" />

</Shell>
